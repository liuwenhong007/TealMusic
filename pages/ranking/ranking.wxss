/* pages/ranking/ranking.wxss */

.mod_topic {
  margin: 20rpx;
}

.topic_item {
  margin-bottom: 20rpx;
  overflow: hidden;
}

.topic_main {
  display: flex;
  background-color: #fff;
}

.topic_media {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.listen_count {
  position: absolute;
  display: block;
  left: 10px;
  bottom: 6rpx;
  line-height: 12px;
  color: #fff;
  opacity: 0.6;
  font-size: 12px;
  z-index: 10;
}

.listen-icon {
  display: block;
  float: left;
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}

.topic_info {
  position: relative;
  display: flex;
  flex: 1;
  align-items: center;
  background-color: #fff;
}

.topic_cont {
  flex: 1;
  margin: 0 20rpx 0 30rpx;
}

.topic_tit {
  display: block;
  font-size: 16px;
  color: #000;
  font-weight: normal;
  margin-bottom: 10rpx;
}

.topic_text {
  font-size: 14px;
  color: rgba(0, 0, 0, 0.5);
}

.topic_tit, .topic_text, .topic_info, .topic_cont {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.text_name {
  color: #000;
  margin-left: 16rpx;
  margin-right: 10rpx;
}

.topic_arrow {
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -8rpx;
  width: 24rpx;
  height: 24rpx;
}
