/* pages/search/search.wxss */

page {
  background-color: #fff;
  color: #333;
}

.search_bar {
  background: #f4f4f4;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search_bar_cont {
  position: relative;
  border-radius: 3px;
  background: #fff;
  height: 40rpx;
  padding: 16rpx 24rpx 16rpx 70rpx;
  flex: 1;
}

.search_bar_tip_text {
  padding-right: 20rpx;
  padding-left: 20rpx;
  font-size: 14px;
  height: 72rpx;
  line-height: 72rpx;
}

.search_input {
  height: 40rpx;
  line-height: 40rpx;
  width: 100%;
  color: #333;
  border: none;
  -webkit-appearance: none;
  font-size: 14px;
}

.placeholder-class {
  color: rgba(0, 0, 0, 0.3);
  height: 40rpx;
  line-height: 40rpx;
}

.search_icon {
  position: absolute;
  top: 9px;
  left: 10px;
  width: 18px;
  height: 18px;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: cover;
  text-indent: -999px;
}

.mod_search_result {
  background: #fff;
  padding: 30rpx 30rpx 20rpx 30rpx;
}

.result_tit {
  display: block;
  color: rgba(0, 0, 0, 0.6);
  margin-bottom: 16rpx;
  font-size: 14px;
}

.result_tags {
  font-size: 0;
}

.tag_hot {
  color: #fc4524 !important;
  border-color: #fc4524 !important;
}

.tag_s {
  display: inline-block;
  font-size: 14px;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #000;
  border: 1px solid rgba(0, 0, 0, 0.6);
  border-radius: 198rpx;
  word-break: keep-all;
  margin-bottom: 20rpx;
  margin-right: 28rpx;
}
